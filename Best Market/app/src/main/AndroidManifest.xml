<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caocao.bestmarket">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".login.view.LoginActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register.RegisterActivity"
            android:label="@string/register"
            android:theme="@style/AppThemeNoActionBar"
            android:parentActivityName=".login.view.LoginActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true" />
        <activity
            android:name=".forgotPassord.ForgotPassword_1Activity"
            android:label="@string/forgot_password"
            android:theme="@style/AppThemeNoActionBar"
            android:parentActivityName=".login.view.LoginActivity" />
        <activity
            android:name=".forgotPassord.ForgotPassword_2Activity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/forgot_password"
            android:parentActivityName=".forgotPassord.ForgotPassword_1Activity" />
        <activity
            android:name=".forgotPassord.ForgotPassword_3Activity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/forgot_password"
            android:parentActivityName=".forgotPassord.ForgotPassword_2Activity" />
        <activity
            android:name=".myAccount.EditInfoActivity"
            android:label="@string/my_account"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:label="@string/title_activity_main">

        </activity>
        <activity
            android:name=".notification.NotificationActivity"
            android:label="@string/notification"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".myAccount.EditUserNameActivity" />
        <activity android:name=".myAccount.EditNameActivity" />
        <activity android:name=".myAccount.EditEmailActivity" />
        <activity android:name=".myAccount.EditPhoneNumberActivity"></activity>
    </application>

</manifest>