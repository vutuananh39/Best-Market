<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productDauGia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thong.ttcnpm_app.ProductDauGia">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imgproduct"
                            android:padding="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin sản phẩm"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />
                    <TextView

                        android:id="@+id/thongtinsplistDGia"

                        android:padding="10dp"
                        android:layout_gravity="center"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primaryLightColor"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Thời gian đấu giá"
                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="10dp"
                    android:id="@+id/txtVtimeconlai"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Số lượt tham gia"
                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="10dp"
                    android:id="@+id/txtluotthamgia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Giá tối thiểu"
                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="10dp"
                    android:id="@+id/txtGiasp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/primaryLightColor"
                android:layout_gravity="center"
                android:text="TOP 5"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/top5daugia"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="280dp" />


            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Giá Của Bạn"
                    android:textStyle="bold"
                    />
                <TextView
                    android:padding="10dp"
                    android:id="@+id/txtMyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="0"
                    />


            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Giá Mới"
                    android:textStyle="bold"
                    />
                <EditText
                    android:padding="10dp"
                    android:id="@+id/txtPriceInput"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:hint="Nhập giá"
                    android:textStyle="italic"
                    />
                <Button
                    android:id="@+id/btnnhapgia"
                    android:layout_gravity="right|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="OK"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>