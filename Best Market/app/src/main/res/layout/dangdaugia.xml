<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dangdgia"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <ImageButton

                        android:id="@+id/btnaddIMG"
                        android:padding="5dp"

                        android:layout_gravity="top|left"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:background="@mipmap/ic_add_img"
                        />
                </LinearLayout>
                <EditText
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:layout_gravity="top|right"
                    android:background="@color/primaryDarkColor"
                    android:hint="Nhập mô tả sẳn phẩm"
                    android:layout_width="220dp"
                    android:layout_height="200dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:id="@+id/txtVminprice"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Gia toi thieu"
                />
            <EditText

                android:padding="10dp"
                android:id="@+id/edtminprice"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@color/primaryDarkColor"
                android:inputType="textPersonName"
                android:hint="Nhập giá"
                android:textStyle="italic"

                />


        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:padding="10dp"
                android:id="@+id/txttimeprice"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Thoi gian dau gia"
                />
            <EditText
                android:id="@+id/txthour"
            android:layout_width="40dp"
            android:layout_height="40dp" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:text=":"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:textSize="19dp"/>
            <EditText
                android:id="@+id/txtmin"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            >
            <TextView
            android:padding="10dp"
            android:id="@+id/txtthongbao"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Nhan thong bao"
            />
            <RadioButton
                android:layout_width="30dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có"/>
            <RadioButton
                android:layout_width="30dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnDauGia"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Đấu giá"
            android:layout_gravity="center"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>